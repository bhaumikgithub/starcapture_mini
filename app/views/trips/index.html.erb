<div class="row m-0">
  <% @trips.each do |trip| %>
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
      <%= link_to trip_path(trip.id) do %>
          <div class="h-100 d-flex align-items-center">
              <div class="text-center triproute-blockwrap">
                <div class="d-table w-100 h-100">
                    <div class="d-table-cell align-middle">
                      <div class="d-block city-name"><%= trip.name %></div>
                      <div class="d-block mb-3 day"><%= trip.description %></div>
                    </div>
                </div>
              </div>
          </div>
        <% end %>
    </div>
  <% end %>
  <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
    <div class="h-100 d-flex align-items-center">
        <div class="text-center triproute-blockwrap add-block">
          <%= link_to("+", new_trip_path, class: "plus-icon") %>
        </div>
    </div>
  </div>
</div>